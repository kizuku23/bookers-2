<!-- Editing Book -->

<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_for(@book) do |f| %>
        <!-- エラーメッセージ -->
          <% if @book.errors.any? %>
            <div class="alert">
              <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <!-- ここまで -->
          <div class="field row">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title, class: "col-xs-12"%>
          </div>
          <div class="field row">
            <label for="body_title">Opinion</label><br>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div>
          <div class="actions row">
            <%= f.submit 'Update Book', class: "col-xs-12 btn btn-primary" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>
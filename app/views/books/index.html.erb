
<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">

<!-- 新規投稿 -->

        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
        <!-- エラーメッセージ -->
          <% if @book.errors.any? %>
            <div class="alert">
              <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <!-- ここまで -->
          <div class="field row">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <label for="body_title">Opinion</label><br>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
              </td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
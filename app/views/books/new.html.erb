
<!-- 新規投稿 -->

  <h2>New book</h2>
  <%= form_for(@book) do |f| %>
  <!-- エラーメッセージ -->
    <% if @book.errors.any? %>
      <div class="alert">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <!-- ここまで -->
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="body_title">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>

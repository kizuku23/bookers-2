<div class="body">
  <div class="container">
    <p id="notice"></p>
    <!-- エラーメッセージ -->
    <% if @books.errors.any? %>
      <div class="alert">
        <h3><%= @books.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @books.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!-- ここまで -->
    <div class="row">
      <div class="col-xs-3">
      <!-- User info -->
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            </tr>
          <tr>
            <th>name</th>
            <th><%= @books.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @books.user.introduction %></th>
          </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@books.user.id), class: "col-xs-12 btn btn-default" do %>
            <span class="glyphicon glyphicon-wrench"></span>
          <% end %>
        </div>
        <!-- 新規投稿 -->
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
          <div class="field row">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <label for="body_title">Opinion</label><br>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <!-- 投稿詳細 -->
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user) do %>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg", size: "40x40" %>
                    <br>
                    <%= @books.user.name %>
                <% end %>
              </td>
              <td><%= @books.title %></td>
              <td><%= @books.body %></td>
              <td>
                <% if @books.user == current_user %>
                  <%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @books.user == current_user %>
                 <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか?", class: "btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
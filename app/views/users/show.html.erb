<div class="body">
  <div class="container">
    <p id="notice"></p>
    <!-- エラーメッセージ -->
    <% if @book.errors.any? %>
      <div class="alert">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!-- ここまで -->
    <div class="row">
      <div class="col-xs-3">
      　<!-- User info -->
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "col-xs-12 btn btn-default" do %>
            <span class="glyphicon glyphicon-wrench"></span>
          <% end %>
        </div>
        <!-- 新規投稿 -->
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>

          <div class="field row">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <label for="body_title">Opinion</label><br>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <!-- 投稿一覧 -->
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <span><%= book.title %></span>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
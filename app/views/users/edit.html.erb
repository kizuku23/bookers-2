<div class="body">
  <div class="container">
    <p id="notice"></p>
    <h2>User info</h2>

    <%= form_for(@user) do |f| %>
        <!-- エラーメッセージ -->
      <% if @user.errors.any? %>
        <div class="alert">
          <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <!-- ここまで -->
      <div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction %>
      </div>
      <div class="field">
        <%= f.submit 'Update User' %>
      </div>
    <% end %>

  </div>
</div>